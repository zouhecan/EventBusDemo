<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zouhecan.eventBusDemo.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#f43d32"
        android:text="使用EventBus实现Activity与Activity、Fragment相互通信"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="20dp"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/load_fragment"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="#FF1395DA"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="向Fragment传值"/>

    <Button
        android:id="@+id/start_other_activity"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="#FF1395DA"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="向Other Activity传值"/>

    <Button
        android:id="@+id/get_return_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从SubActivity返回的数据："
        android:layout_marginTop="30dp"
        android:layout_gravity="center_vertical"/>
    <EditText
        android:id="@+id/data_from_sub_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>
